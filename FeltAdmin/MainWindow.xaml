<Window x:Class="FeltAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Converters="clr-namespace:FeltAdmin.Converters;assembly=FeltAdminCommon"
        xmlns:Viewmodels="clr-namespace:FeltAdmin.Viewmodels;assembly=FeltAdminCommon"
        xmlns:Orion="clr-namespace:FeltAdmin.Orion;assembly=FeltAdminCommon"
        Title="FeltAdmin" Height="742" Width="854" 
        >
    <Window.Resources>
        <Converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <Converters:OppositeBoolToVisibilityConverter x:Key="OppositeBoolToVisibilityConverter"/>
        <Converters:ObjectNotNullToVisibilityConverter x:Key="ObjectNotNullToVisibilityConverter"/>
        <DataTemplate x:Key="CommunicationSetup" DataType="Viewmodels:CommunicationSetup">
            <StackPanel DataContext="{Binding}"  Orientation="Horizontal" VerticalAlignment="Top">
                <Label>kommunikasjonskatalog:</Label>
                <TextBox Text="{Binding SelectedPath, UpdateSourceTrigger=PropertyChanged}" Width="400"/>
                <Button Command="{Binding OpenFileDialogCommand}" Content="..."/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="RangeTemplate" DataType="Viewmodels:RangeViewModel">
            <StackPanel DataContext="{Binding}" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBox Margin="5" Text="{Binding RangeId, UpdateSourceTrigger=PropertyChanged}"/>
                <TextBox Margin="5" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </DataTemplate>
        
        
        <DataTemplate x:Key="RangeView" DataType="Viewmodels:OrionViewModel">
            <StackPanel DataContext="{Binding}" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding AddRangeCommand}" Margin="5" Content="Legg til hold"/>
                    <Button Command="{Binding AddPauseCommand}" Margin="5" Content="Legg til opphold"/>
                </StackPanel>
                <Grid Margin="5" Visibility="{Binding RangeVisible, Converter={StaticResource BoolToVisibilityConverter} }">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Grid.Column="0" ItemsSource="{Binding RangeViews}" SelectedItem="{Binding SelectedRange}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="Fjern" Command="{Binding RemoveRange}"  />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Hold" Width="SizeToCells" MinWidth="40" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding RangeId}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                            <Label.Style>
                                                <Style TargetType="{x:Type Label}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RangeType}" Value="1">
                                                            <Setter Property="Background" Value="LightGray"></Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Label.Style>
                                        </Label>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Border Margin="5" Grid.Column="1" BorderBrush="Teal" BorderThickness="2" Visibility="{Binding SelectedRange, Converter={StaticResource ObjectNotNullToVisibilityConverter} }">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Margin="5" Grid.Row="0" Grid.Column="0" Content="HoldId: " VerticalAlignment="Center"/>
                            <TextBox Margin="5" Grid.Row="0" Grid.Column="1" Text="{Binding SelectedRange.RangeId, UpdateSourceTrigger=PropertyChanged}" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="SteelBlue"/>
                            <Label Margin="5" Grid.Row="1" Grid.Column="0" Content="Type: " VerticalAlignment="Center"/>
                            <TextBox Margin="5" Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRange.RangeType, UpdateSourceTrigger=PropertyChanged}" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="SteelBlue" IsTabStop="False" IsReadOnly="True"/>
                            <Label Margin="5" Grid.Row="2" Grid.Column="0" Content="Navn: " VerticalAlignment="Center" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Margin="5" Grid.Row="2" Grid.Column="1" Text="{Binding SelectedRange.Name, UpdateSourceTrigger=PropertyChanged}" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="SteelBlue" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Label Margin="5" Grid.Row="3" Grid.Column="0" Content="Første skive: " VerticalAlignment="Center" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Margin="5" Grid.Row="3" Grid.Column="1" Text="{Binding SelectedRange.FirstTarget, UpdateSourceTrigger=PropertyChanged}" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="SteelBlue" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Label Margin="5" Grid.Row="4" Grid.Column="0" Content="Siste skive: " VerticalAlignment="Center" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Margin="5" Grid.Row="4" Grid.Column="1" Text="{Binding SelectedRange.LastTarget, UpdateSourceTrigger=PropertyChanged}" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="SteelBlue" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Label Margin="5" Grid.Row="5" Grid.Column="0" Content="Resultattype: " VerticalAlignment="Center" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <ComboBox Margin="5" Grid.Row="5" Grid.Column="1" ItemsSource="{Binding SelectedRange.ResultTypes}" HorizontalAlignment="Left" MinWidth="100" SelectedItem="{Binding SelectedRange.ResultType}" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Label Margin="5" Grid.Row="6" Grid.Column="0" Content="Dobbelthold: " VerticalAlignment="Center" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <CheckBox  Margin="5" Grid.Row="6" Grid.Column="1" IsChecked="{Binding SelectedRange.DoubleRange}" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="SteelBlue" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Label Margin="5" Grid.Row="7" Grid.Column="0" Content="Antall tellende: " VerticalAlignment="Center" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <TextBox Margin="5" Grid.Row="7" Grid.Column="1" Text="{Binding SelectedRange.CountingShoots, UpdateSourceTrigger=PropertyChanged}" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="SteelBlue" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <Label Margin="5" Grid.Row="8" Grid.Column="0" Content="Minneskyting: " VerticalAlignment="Center" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <CheckBox  Margin="5" Grid.Row="8" Grid.Column="1" IsChecked="{Binding SelectedRange.MinneShooting}" VerticalAlignment="Center" HorizontalAlignment="Left" BorderBrush="SteelBlue" Visibility="{Binding SelectedRange.RangeDetailsVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            <ContentControl Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Content="{Binding SelectedRange.CommunicationSetup}" ContentTemplate="{StaticResource CommunicationSetup}" IsEnabled="{Binding SelectedRange.CommunicationSetupVisible}"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="OrionCompetitionView" DataType="Viewmodels:OrionSetupViewModel">
            <DataGrid ItemsSource="{Binding SortedRanges}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RangeType}" Value="2">
                                <Setter Property="Background" Value="Wheat"></Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding RangeType}" Value="1">
                                <Setter Property="Background" Value="LightGray"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Orion" Width="SizeToCells" MinWidth="50" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5,0,0,5" Text="{Binding OrionIdStr}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="HoldId" Width="SizeToCells" MinWidth="50" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5,0,0,5" Text="{Binding RangeId}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Navn" Width="SizeToCells" MinWidth="80" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding NameOrType}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Resultattype" Width="SizeToCells" MinWidth="80" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5,0,0,5" Text="{Binding ResultTypeStr}" HorizontalAlignment="Center" Visibility="{Binding IsShooting, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Første skive" Width="SizeToCells" MinWidth="80" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5,0,0,5" Text="{Binding FirstTarget}" HorizontalAlignment="Center" Visibility="{Binding IsShooting, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Siste skive" Width="SizeToCells" MinWidth="80" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5,0,0,5" Text="{Binding LastTarget}" HorizontalAlignment="Center" Visibility="{Binding IsShooting, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Holdtype" Width="SizeToCells" MinWidth="80" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5,0,0,5" Text="{Binding DoubleRangeStr}" Visibility="{Binding IsShooting, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Tellende skudd" Width="SizeToCells" MinWidth="100" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="5,0,0,5" Text="{Binding CountingShoots}" HorizontalAlignment="Center" Visibility="{Binding IsShooting, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DataTemplate>

        <DataTemplate x:Key="OrionSetup" DataType="Viewmodels:OrionSetupViewModel">
            <StackPanel DataContext="{Binding}" Orientation="Vertical" IsEnabled="{Binding SetupMode}">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <Button Content="+ Orion" Command="{Binding NewOrionCommand}" IsEnabled="{Binding SetupMode}"/>
                </StackPanel>
                <Grid Margin="5" Visibility="{Binding OrionVisible, Converter={StaticResource BoolToVisibilityConverter} }">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Grid.Column="0" ItemsSource="{Binding OrionViewModels}" SelectedItem="{Binding SelectedOrion}" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.ContextMenu>
                            <ContextMenu >
                                <MenuItem Header="Fjern" Command="{Binding RemoveOrion}"  />
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Orion" Width="SizeToCells" MinWidth="40" IsReadOnly="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                         <TextBlock Margin="5,0,0,5" Text="{Binding OrionId}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Border Margin="5" Grid.Column="1" BorderBrush="Teal" BorderThickness="2" Visibility="{Binding SelectedOrion, Converter={StaticResource ObjectNotNullToVisibilityConverter} }">
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Label Content="OrionId: " VerticalAlignment="Center"/>
                                <TextBox Text="{Binding SelectedOrion.OrionId, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" BorderBrush="White"/>
                            </StackPanel>
                            <ContentPresenter Grid.Row="1" Content="{Binding SelectedOrion.CommunicationSetup}" ContentTemplate="{StaticResource CommunicationSetup}"/>
                            <ContentPresenter Grid.Row="2" Content="{Binding SelectedOrion}" ContentTemplate="{StaticResource RangeView}"/>
                        </Grid>
                    </Border>
                </Grid>
            </StackPanel>
        </DataTemplate>
        
        <DataTemplate x:Key="LeonCommunicationSetup" DataType="Viewmodels:LeonCommunication">
            <StackPanel DataContext="{Binding}" Orientation="Vertical">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <ContentPresenter Content="{Binding CommunicationSetup}" ContentTemplate="{StaticResource CommunicationSetup}"/>
                </StackPanel>
                <!--<Button Command="{Binding StartLeonCommand}" Width="Auto" Margin="0,5,0,0" HorizontalAlignment="Left" Content="Import fra Leon"/>-->
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="LeonRegistration" DataType="Viewmodels:LeonViewModel"> 
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <DataGrid ItemsSource="{Binding Teams}" Grid.Column="0" AutoGenerateColumns="False" SelectedItem="{Binding SelectedTeam}" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Lag" Width="SizeToCells" MinWidth="30" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="5,0,0,5" Text="{Binding}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid Grid.Column="1" ItemsSource="{Binding SelectedLeonPersons}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Skive" Width="SizeToCells" MinWidth="40" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="5,0,0,5" Text="{Binding Target}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Navn" Width="SizeToCells" MinWidth="50" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="5,0,0,5" Text="{Binding Name}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Klasse" Width="SizeToCells" MinWidth="50" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Class}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Skytterlag" Width="SizeToCells" MinWidth="70" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="5,0,0,5" Text="{Binding ClubName}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Id" Width="SizeToCells" MinWidth="30" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Margin="5,0,0,5" Text="{Binding ShooterId}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="NewCompetitionHeader">
            <TextBlock Margin="5" FontSize="16" FontWeight="Bold" Foreground="CadetBlue">Opprett nytt Stevne:</TextBlock>
        </DataTemplate>

        <DataTemplate x:Key="EditTemplates">
            <TextBlock Margin="5" FontSize="16" FontWeight="Bold" Foreground="CadetBlue">Rediger stevnemaler:</TextBlock>
        </DataTemplate>

        <DataTemplate x:Key="DatabaseTemplate" DataType="Viewmodels:DatabaseSetup">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5">
                    <TextBlock Margin="5" FontSize="16" FontWeight="Bold" Foreground="CadetBlue">Velg Stevne:</TextBlock>
                    <Border BorderThickness="2" BorderBrush="CadetBlue">
                        <StackPanel Orientation="Vertical">
                            <ComboBox MinWidth="200" MaxWidth="500" Width="Auto" Margin="5" HorizontalAlignment="Left" ItemsSource="{Binding DataBaseNames, Mode=TwoWay}" DisplayMemberPath="DatabaseName" SelectedItem="{Binding SelectedDatabase, Mode=TwoWay}"/>
                            <Button Command="{Binding InitDbDoneCommand}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,10,5,10" Width="200" Content="Start"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                <Expander Grid.Row="1" HeaderTemplate="{StaticResource NewCompetitionHeader}">
                    <StackPanel Orientation="Vertical" Margin="5,20,5,5">
                        <Border BorderThickness="2" BorderBrush="CadetBlue">
                            <StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock MinWidth="100" Margin="5">Definisjon:</TextBlock>
                                    <ComboBox
                                    HorizontalAlignment="Left"
                                    Margin="5"
                                    VerticalAlignment="Top"
                                    Width="200"
                                    ItemsSource="{Binding AvailableTemplates}"
                                    SelectedItem="{Binding SelectedAvailableTemplate}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock MinWidth="100" Margin="5">Stevnenavn:</TextBlock>
                                    <TextBox MinWidth="200" Margin="5" Text="{Binding NewDatabaseName, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock MinWidth="100" Margin="5">Startdato:</TextBlock>
                                    <DatePicker Width="200" Margin="5" SelectedDate="{Binding NewDatabaseStartTime}"/>
                                </StackPanel>
                                <Button Width="310" Command="{Binding CreateDatabaseCommand}" Margin="5" HorizontalAlignment="Left" Content="Opprett database"/>
                            </StackPanel>
                            <!--<StackPanel Orientation="Vertical">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="5">Stevnenavn:</TextBlock>
                                    <TextBox MinWidth="100" Margin="5" Text="{Binding NewDatabaseName}"/>
                                    <TextBlock Margin="5">Definisjon:</TextBlock>
                                    <ComboBox
                                    HorizontalAlignment="Left"
                                    Margin="10,5,0,0"
                                    VerticalAlignment="Top"
                                    Width="120"
                                    ItemsSource="{Binding AvailableTemplates}"
                                    SelectedItem="{Binding SelectedAvailableTemplate}" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="5">Startdato:</TextBlock>
                                    <DatePicker Margin="5" SelectedDate="{Binding NewDatabaseStartTime}"/>
                                    <Button Command="{Binding CreateDatabaseCommand}" Margin="5" HorizontalAlignment="Left" Content="Opprett database"/>
                                </StackPanel>
                            </StackPanel>-->
                        </Border>
                    </StackPanel>
                </Expander>
                <Expander Grid.Row="2" HeaderTemplate="{StaticResource EditTemplates}">
                    <StackPanel Orientation="Vertical" Margin="5,20,5,5">
                    <Border BorderThickness="2" BorderBrush="CadetBlue">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Width="120" Margin="5">Ny stevnemal, navn:</TextBlock>
                                    <TextBox MinWidth="200" Margin="5" Text="{Binding NewTemplateName, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Command="{Binding CreateTemplateCommand}" Margin="5" Width="70" HorizontalAlignment="Left" Content="Opprett"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Width="120" Margin="5">Rediger stevnemal:</TextBlock>
                                    <ComboBox
                                    HorizontalAlignment="Left"
                                    Margin="5"
                                    VerticalAlignment="Top"
                                    Width="200"
                                    ItemsSource="{Binding TemplatesfileNames}"
                                    SelectedItem="{Binding SelectedTemplatesfileName}" Visibility="{Binding TemplateVisibility}"/>
                                    <Button Command="{Binding ChangeTemplateCommand}" Margin="5" Width="70" HorizontalAlignment="Left" Content="Rediger"/>
                                </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
                </Expander>
            </Grid>
        </DataTemplate>

